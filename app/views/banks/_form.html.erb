

<%= form_for [@bank] do |f| %>
  <div class="field">
  <%= f.label :name %>
  <%= f.text_field :name, size: 20, required:'' %>
  </div>
  <br>
  <div class="field">
  <%= f.label :address %>
  <%= f.text_field :address, size: 20 %>
  </div>
  <br>
  <div class="field">
  <%= f.label :phone %>
  <%= f.text_field :phone, size: 20 %>
  </div>
  <br>
  <div class="field">
  <%= f.label :city %>
  <%= f.text_field :city, size: 20 %>
  </div>
  <br>
  <div class="field">
  <%= f.label :state %>
  <%= f.text_field :state, size: 20 %>
  </div>
  <br>
  <div class="field">
  <%= f.label :country %>
  <%= f.text_field :country, size: 20 %>
  </div>
  <br>

  <%= f.submit 'Save' %>

<% end %>
